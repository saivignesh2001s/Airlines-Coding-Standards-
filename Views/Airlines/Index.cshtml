@model IEnumerable<Airlines.Model.Airline>
<a class="btn btn-success" href="/Airlines/Create">Create</a>
@if(Model.Count() > 0)
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Founding Year</th>
                <th scope="col">Origin Country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(modelitem=>item.Name)</td>
                    <td>@Html.DisplayFor(modelitem=>item.FoundingYear)</td>
                    <td>@Html.DisplayFor(modelitem=>item.OriginCountry)</td>
                    <td><a class="btn btn-primary" href="Airlines/Edit/@item.Id">Edit</a></td>
                    <td><a class="btn btn-danger" href="Airlines/Delete/@item.Id">Delete</a></td>
                    <td><a class="btn btn-success" href="Airlines/Details/@item.Id">View</a></td>

                </tr>
            }
        </tbody>
    </table>
}
